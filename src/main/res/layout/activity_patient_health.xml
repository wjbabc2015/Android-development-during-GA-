<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#592A8A">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="65dp"
            android:text="CHECK MY HEALTH"
            android:layout_gravity="center"
            android:textColor="#FEC923"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#592A8A">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:id="@+id/weight_check"/>

        <Button
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:id="@+id/measure_weight"
            android:text="WEIGHT"
            android:textSize="40dp"
            android:textColor="#010101"
            android:layout_gravity="center"
            android:background="@drawable/button"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#592A8A">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:id="@+id/edema_check"/>

        <Button
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:id="@+id/measure_edema"
            android:text="Edema"
            android:textSize="40dp"
            android:textColor="#010101"
            android:layout_gravity="center"
            android:background="@drawable/button"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#592A8A">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:id="@+id/felling_check"/>

        <Button
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:id="@+id/feelling"
            android:text="How do you feel?"
            android:textSize="40dp"
            android:textColor="#010101"
            android:layout_gravity="center"
            android:background="@drawable/button"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.14"
        android:orientation="horizontal"
        android:background="#592A8A">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/check_back"
                    android:text= "Back"
                    android:textColor="#010101"
                    android:textSize="50dp"
                    android:layout_gravity="bottom"
                    android:background="@drawable/button"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/ic_launcher"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
