<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#592A8A">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/greeting"
            android:layout_weight="1"
            android:textSize="65dp"
            android:textColor="#FEC923"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/greeting_image"
            android:layout_weight="4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#592A8A">

        <Button
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:id="@+id/check_health"
            android:text="Check My Health"
            android:textSize="40dp"
            android:textColor="#010101"
            android:layout_gravity="left"
            android:background="@drawable/button"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#592A8A">

        <Button
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:id="@+id/view_history"
            android:text="View My History"
            android:textSize="40dp"
            android:textColor="#010101"
            android:layout_gravity="left"
            android:background="@drawable/button"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#592A8A">

        <Button
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:id="@+id/my_info"
            android:text="My Information"
            android:textSize="40dp"
            android:textColor="#010101"
            android:layout_gravity="left"
            android:background="@drawable/button"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="#592A8A">

            <Button
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:id="@+id/daily_message"
            android:text="Today`s Message"
            android:textSize="35dp"
            android:textColor="#010101"
            android:layout_gravity="left"
                android:background="@drawable/button"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.08"
        android:orientation="horizontal"
        android:background="#592A8A">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/exit1"
                    android:text="Done"
                    android:textSize="50dp"
                    android:textColor="#000000"
                    android:background="@drawable/button"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/ic_launcher"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
